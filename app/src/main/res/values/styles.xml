<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="buttonTextStyle">
        <item name="android:textSize">@dimen/fixed_text_size_body</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="slimContainedButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:paddingTop">@dimen/spacing_size_8</item>
        <item name="android:paddingBottom">@dimen/spacing_size_8</item>
        <item name="android:paddingStart">@dimen/spacing_size_8</item>
        <item name="android:paddingEnd">@dimen/spacing_size_8</item>
        <item name="cornerRadius">@dimen/spacing_size_8</item>
        <item name="android:textAppearance">@style/buttonTextStyle</item>
    </style>

    <style name="slimContainedButton.teal" parent="slimContainedButton">
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/teal_200</item>
        <item name="backgroundTint">@color/teal</item>
        <item name="iconTint">@color/white</item>
    </style>

    <!-- TEXT STYLES section start -->

    <style name="headerText">
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">@dimen/fixed_text_size_header_line_spacing</item>
        <item name="android:textSize">@dimen/fixed_text_size_header</item>
    </style>

    <style name="bodyText">
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">@dimen/fixed_text_size_body_line_spacing</item>
        <item name="android:textSize">@dimen/fixed_text_size_body</item>
        <item name="android:textColorLink">@color/bodyGrey</item>
    </style>

    <!-- TEXT STYLES section end -->

</resources>